{
  "manifest_version": 2,
  "name": "Shred",
  "version": "0.1",
  "author": "Lana Larsen <lana@stoatly.com>",
  "description": "Remove browsing history with a click of a button.",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "icon-animator.js", 
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Shred"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [ 
    "browsingData",
    "storage"
  ]
}
